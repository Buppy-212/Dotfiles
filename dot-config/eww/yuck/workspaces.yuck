(defwidget workspaces []
  (eventbox :onscroll "scripts/change-workspace.sh {} ${current_workspace}"
    (box :orientation "h" :space-evenly false :class "workspaces"
      (for workspace in workspaces
        (button :class "workspace ${current_workspace == workspace.id ? "current" : ""} ${workspace.windows > 0 ? "occupied" : ""}" :onclick "hyprctl dispatch workspace ${workspace.id}"
        )
      )
    )
  )
)
