(defwidget filter []
  (box :orientation "h"
    (button :class "filter-button" :onclick "scripts/filter.sh --toggle" :tooltip "Night Light"
      (label :class "filter-icon" :text filter)
    )
  )
)

(defwidget vfilter []
  (box :orientation "v"
    (button :class "filter-button" :onclick "scripts/filter.sh --toggle" :tooltip "Night Light"
      (label :class "vfilter-icon" :text filter)
    )
  )
)
