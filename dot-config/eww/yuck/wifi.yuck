(defwidget wifi []
  (box  :orientation "h"  :tooltip "${wifi.name}"
  (button :onclick "uwsm app -- kitty  --title=minitty -e nmtui &" :class "wifi-button" :valign "center"
      (label :class "wifi-icon" :text "${wifi.icon}")
    )
  )
)

(defwidget vwifi []
  (box  :orientation "v"  :tooltip "${wifi.name}"
  (button :onclick "uwsm app -- kitty  --title=leftty -e nmtui &" :class "vwifi-button" :valign "center"
      (label :class "wifi-icon" :text "${wifi.icon}")
    )
  )
)
